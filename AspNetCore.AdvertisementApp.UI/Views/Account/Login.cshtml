@model AppUserLoginDto
@{
    ViewData["Title"] = "Home Page";
    //Layout = "_Layout.cshtml";
}
<div class="dummy mt-5">
    <div class="container my-3">
        <form aasp-controller="Account" asp-action="Login" method="Post" class="p-4 w-75 mx-auto">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" asp-for="@Model.Username" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" asp-for="@Model.Password" />
            </div>

            <div class="form-group mt-2">
                <input type="checkbox" class="form-check-input" asp-for="@Model.RememberMe" />

                <label class="form-check-label">Remember Me</label>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-success btn-sm">Login</button>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>